{
  "name": "tflint-vscode",
  "displayName": "tflint-vscode",
  "description": "Adds TFLint support to VS Code by running TFLint, parsing its results, and displaying diagnostics for Terraform files.",
  "version": "0.0.9",
  "publisher": "NandovdK",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/NandovdK/tflint-vscode"
  },
  "engines": {
    "vscode": "^1.106.1"
  },
  "categories": [
    "Linters"
  ],
  "keywords": [
    "linter",
    "terraform",
    "tflint"
  ],
  "activationEvents": [
    "onLanguage:terraform",
    "workspaceContains:*.tf"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "TFLint",
      "properties": {
        "tflint-vscode.configFile": {
          "type": "string",
          "default": "",
          "description": "Optional path to a .tflint.hcl file for this workspace. Leave empty to auto-detect."
        },
        "tflint-vscode.fixOnSave": {
          "type": "boolean",
          "default": false,
          "description": "Optional property, set to true if you want tflint to fix on save"
        },
        "tflint-vscode.tfLintBinPath": {
          "type": "string",
          "default": "",
          "description": "Optional bin path for tflint, if not defined it will use the tflint in $PATH"
        }
      }
    },
    "languages": [
      {
        "id": "terraform",
        "extensions": [
          ".tf",
          ".tfvars"
        ]
      }
    ],
    "commands": [
      {
        "command": "extension.lint",
        "title": "TFLint: Lint project"
      },
      {
        "command": "extension.lint-fix",
        "title": "TFLint: Lint project & auto fix issues if possible"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.106.1",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.27.0",
    "eslint": "^9.39.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.3"
  }
}
